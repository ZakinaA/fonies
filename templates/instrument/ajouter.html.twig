{# templates/instrument/ajouter.html.twig #}
{% extends "base.html.twig" %}
{% block title %}Ajouter un instrument{% endblock %}
{% block contenu %}

<div class="grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Formulaire Ajouter Instrument</h4>
                  {{ form_start(form, 
                    {class : 'form-sample'}) 
                    }}
                    <div class="form-group">
                    <label for="intitule">Intitule</label>
                      {{ form_row(form.intitule, 
                        {class : 'form-control'},
                        {id : 'intitule'}) }}
                    </div>
                    <div class="form-group">
                    <label for="date_achat">Date d'achat</label>
                      {{ form_row(form.date_achat, 
                        {class : 'form-control'},
                        {id : 'date_achat'}) }}
                    </div>
                    <div class="form-group">
                      <label for="numeroserie">Numéro de série</label>
                      {{ form_row(form.numeroserie, 
                      {class : 'form-control'},
                        {id : 'numeroserie'}) }}
                    </div>
                    <div class="form-group">
                      <label for="couleur">Couleur</label>
                      {{ form_row(form.couleur, 
                      {class : 'form-control'},
                        {id : 'couleur'}) }}
                    </div>

                    <div class="form-group">
                      <label for="utilisation">Utilisation</label>
                      {{ form_row(form.utilisation, 
                      {class : 'form-control'},
                        {id : 'utilisation'}) }}
                    </div>

                    <div class="form-group">
                      <label for="prixAchat">Prix d'achat</label>
                      {{ form_row(form.prixAchat, 
                      {class : 'form-control'},
                        {id : 'prixAchat'}) }}
                    </div>

                    <div class="form-group">
                      <label for="typeInstrument">Type d'instrument</label>
                      {{ form_row(form.typeInstrument, 
                      {class : 'selection'},
                        {id : 'typeInstrument'}) }}
                    </div>

                    <div class="form-group">
                      <label for="marqueInstrument">Marque de l'instrument</label>
                      {{ form_row(form.marqueInstrument, 
                      {class : 'form-control'},
                        {id : 'marqueInstrument'}) }}
                    </div>

                    <div class="form-group">
                      <label for="modeleInstrument">Modèle de l'instrument</label>
                      {{ form_row(form.modeleInstrument, 
                      {class : 'form-control'},
                        {id : 'modeleInstrument'}) }}
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Valider</button>
                    <button class="btn btn-light">Annuler</button>
                {{ form_end(form) }}
                </div>
              </div>
            </div>

{% endblock %}